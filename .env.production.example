# Ejemplo de variables de entorno para producción
# Copia este archivo a .env.production y completa con tus valores reales

# =============================================================================
# CONFIGURACIÓN GENERAL
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://tu-dominio.com

# =============================================================================
# BASE DE DATOS
# =============================================================================
# PostgreSQL en Docker
DATABASE_URL=postgresql://foodzinder:CAMBIA_ESTA_CONTRASEÑA@postgres:5432/foodzinder_db

# Credenciales de PostgreSQL (deben coincidir con DATABASE_URL)
POSTGRES_USER=foodzinder
POSTGRES_PASSWORD=CAMBIA_ESTA_CONTRASEÑA
POSTGRES_DB=foodzinder_db

# =============================================================================
# AUTENTICACIÓN (Clerk)
# =============================================================================
# Obtén estas claves en: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxxxxxxxxx
CLERK_SECRET_KEY=sk_live_xxxxxxxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxx

# =============================================================================
# PAGOS (Stripe)
# =============================================================================
# Obtén estas claves en: https://dashboard.stripe.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxx

# =============================================================================
# ALMACENAMIENTO DE IMÁGENES (Cloudinary)
# =============================================================================
# Obtén estas claves en: https://cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=xxxxxxxxxx
CLOUDINARY_API_SECRET=xxxxxxxxxx

# =============================================================================
# ALMACENAMIENTO ALTERNATIVO (UploadThing) - Opcional
# =============================================================================
# Obtén estas claves en: https://uploadthing.com
UPLOADTHING_SECRET=sk_live_xxxxxxxxxx
UPLOADTHING_APP_ID=xxxxxxxxxx

# =============================================================================
# CDN (Bunny.net) - Opcional
# =============================================================================
NEXT_PUBLIC_BUNNY_CDN_URL=https://tu-storage.b-cdn.net
BUNNY_API_KEY=xxxxxxxxxx

# =============================================================================
# BÚSQUEDA (Meilisearch)
# =============================================================================
# Meilisearch en Docker (interno)
NEXT_PUBLIC_MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_MASTER_KEY=CAMBIA_ESTA_MASTER_KEY_SEGURA
MEILI_ENV=production

# =============================================================================
# CACHÉ (Redis/Upstash) - Opcional
# =============================================================================
REDIS_URL=redis://localhost:6379
# O para Upstash:
# REDIS_URL=redis://:xxxxxxxxxx@xxxxx.upstash.io:6379

# =============================================================================
# EMAIL (Resend)
# =============================================================================
# Obtén tu API key en: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxx

# =============================================================================
# ANALYTICS (Google Tag Manager) - Opcional
# =============================================================================
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_FEATURE_FLAG_REVIEWS=true
NEXT_PUBLIC_FEATURE_FLAG_SUBSCRIPTIONS=true
NEXT_PUBLIC_FEATURE_FLAG_BOOKINGS=true

# =============================================================================
# SEGURIDAD
# =============================================================================
# Genera una clave aleatoria segura
SECRET_KEY=genera_una_clave_aleatoria_muy_larga_y_segura
