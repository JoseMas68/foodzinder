# Database
DATABASE_URL=postgresql://user:password@localhost:5432/foodzinder

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret

# Stripe Payments
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Uploadthing (Image uploads)
UPLOADTHING_TOKEN=your_uploadthing_token

# Bunny.net CDN (Optional)
NEXT_PUBLIC_BUNNY_CDN_URL=https://your-bunny-url.bunnycdn.com
BUNNY_API_KEY=your_bunny_api_key

# Meilisearch
NEXT_PUBLIC_MEILISEARCH_HOST=https://meilisearch.example.com
MEILISEARCH_API_KEY=your_meilisearch_api_key

# Redis/Upstash (Optional)
REDIS_URL=redis://localhost:6379

# Email (Resend)
RESEND_API_KEY=your_resend_api_key

# App Config
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Analytics (Google Tag Manager)
NEXT_PUBLIC_GTM_ID=your_gtm_id

# Feature Flags
NEXT_PUBLIC_FEATURE_FLAG_REVIEWS=true
NEXT_PUBLIC_FEATURE_FLAG_SUBSCRIPTIONS=true
